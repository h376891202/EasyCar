<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="55dip"
        android:background="@drawable/nav_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/headImage"
            android:layout_width="50dip"
            android:layout_height="48dip"
            android:background="@drawable/nav_contact" />

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/country_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="成都"
                android:textColor="#ffffffff"
                android:textSize="20sp" />

            <ImageView
                android:layout_width="28dip"
                android:layout_height="48dip"
                android:gravity="center"
                android:background="@drawable/nav_location" />
        </LinearLayout>

        <Button
            android:id="@+id/switch_brand"
            android:layout_width="50dip"
            android:layout_height="48dip"
            android:gravity="center"
            android:background="@drawable/nav_list" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1" >

        <com.baidu.mapapi.map.MapView
            android:id="@+id/bmapView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:clickable="true" />
        <ImageView 
            android:layout_height="50dip"
            android:layout_width="338dip"
            android:layout_marginLeft="11dip"
            android:layout_marginTop="10dip"
            android:paddingLeft="60dip"
            android:background="@drawable/map_search"/>

        <Button
            android:id="@+id/zoomin"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dip"
            android:layout_marginRight="6dip"
            android:background="@drawable/map_zoomin"/>
         <Button
            android:id="@+id/zoomout"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_above="@id/zoomin"
            android:layout_marginRight="6dip"
            android:layout_alignParentRight="true"
            android:background="@drawable/map_zoomout"/>
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="#ff969696" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="84dip"
        android:background="#fff7f7f7" >

        <Button
            android:id="@+id/button_car_to_4s"
            android:layout_width="163dip"
            android:layout_height="55dip"
            android:layout_marginLeft="12dip"
            android:layout_marginTop="13dip"
            android:background="@drawable/btn_car_2_4s" />

        <Button
            android:id="@+id/button_car_to_home"
            android:layout_width="163dip"
            android:layout_height="55dip"
            android:layout_marginLeft="10dip"
            android:layout_marginTop="13dip"
            android:background="@drawable/btn_car_2_home" />
    </LinearLayout>

</LinearLayout>